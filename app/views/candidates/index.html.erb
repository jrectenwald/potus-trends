<h1 class="center-heading">Candidate Tweet Volume</h1>
<h3 class="center-heading">Relative Frequency of Tweets per Day</h3>

<form id="candidate_dropdown">
  <select class="tweet-frequency" id="candidate_id" style="width: 20%;height:4em">
    <option value="choose_candidate">Choose A Candidate</option>
    <% Candidate.all.each do |candidate| %>
      <option value="<%=candidate.user_id%>"> <%= candidate.name %> </option> %>
    <% end %>
  </select>
</form>